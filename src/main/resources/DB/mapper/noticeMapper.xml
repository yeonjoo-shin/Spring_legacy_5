<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
 <mapper namespace="com.naver.s5.notice.NoticeDAO">

 	<insert id="boardWrite" parameterType="com.naver.s5.notice.NoticeVO">
 		insert into notice values(board_seq.nextval,#{title},#{name},sysdate,0,#{content})
 	</insert>
 	
 	<delete id="boardDelete" parameterType="java.lang.Long"><!-- long 타입 -->
 		delete notice where num=#{num} <!-- 넘겨줄때의 변수명 입력 -->
 	</delete>
 	
 	<update id="boardUpdate" parameterType="com.naver.s5.notice.NoticeVO">
 		UPDATE notice set title=#{title}, content=#{content} where num=#{num}
 	</update>
 	
 	<update id="hitUpdate" parameterType="java.lang.Long">
 		UPDATE notice set hit=hit+1 where num=#{num}
 	</update>
 	
 	<select id="boardSelect" parameterType="java.lang.Long" resultType="com.naver.s5.notice.NoticeVO">
 		select * from notice where num=#{num}
 	</select>
 	
 	<select id="boardList" parameterType="java.util.Map"  resultType="com.naver.s5.notice.NoticeVO">
 		select * from
			(select N.*, rownum R from
				(select * from notice order by num desc) N)
		where R between #{startRow} and #{lastRow}
 	</select>
 	<!-- 전체 글의 갯수 가지고 오기 -->
 	<select id="boardCount" resultType="java.lang.Long">
 		select count(num) from notice
 	</select>
 	
 </mapper>
