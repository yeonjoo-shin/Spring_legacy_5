<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  
<mapper namespace="com.naver.s5.qna.QnaDAO">

	<insert id="boardWrite" parameterType="com.naver.s5.qna.QnaVO">
		insert into qna values(board_seq.nextval,#{title},#{name},sysdate,0,0,0,0,#{content})
	</insert>
	
	<delete id="boardDelete" parameterType="java.lang.Long">
		delete qna where num=#{num}
	</delete>
	
	<update id="boardUpdate" parameterType="com.naver.s5.qna.QnaVO">
		update qna set title=#{title},content=#{content} where num=#{num}
	</update>
	
	<update id="hitUpdate" parameterType="java.lang.Long">
		update qna set hit=hit+1 where num=#{num}
	</update>
	
	<select id="boardSelect" parameterType="java.lang.Long" resultType="com.naver.s5.qna.QnaVO">
		select * from qna where num=#{num}
	</select>
	
	<select id="boardList" parameterType="java.util.Map" resultType="com.naver.s5.qna.QnaVO">
		select * from
			(select N.*, rownum R from
				(select * from qna order by num desc) N )
		where R between #{startRow} and #{lastRow}
	</select>
	<!-- 전체 글의 갯수 가지고 오기 -->
	<select id="boardCount" resultType="java.lang.Long">
		select count(num) from qna
	</select>
	
	
</mapper>